<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_edit" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:textColorHint">#666666</item>
        <item name="editTextColor">@color/bkackText</item>
    </style>
    <style name="style_btn_make_dz" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:height">19dp</item>
        <item name="android:background">@drawable/botton_make_dz</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AlerDialogDz">
        <!-- Customize your theme here. -->
        <item name="android:height">150dp</item>
        <item name="android:background">@drawable/alert_dialog</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
